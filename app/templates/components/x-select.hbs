<div class="selectContainer">
  <select class="ember-x-editable-select input-sm {{if isEditing 'is-editing' 'is-not-editing'}}"
          onchange={{action (mut value) value="target.value"}}>
    {{#each content as |option|}}
      <option value={{option}} selected={{eq value option.value}}>{{option.text}}</option>
    {{/each}}
  </select>

  {{partial 'error'}}
</div>

{{partial 'buttons'}}